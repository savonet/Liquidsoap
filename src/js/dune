; Regenerate using dune build @gendune --auto-promote

(include dune.inc)

(env
 (dev
  (flags
   (:standard -w -7-9 -warn-error -33))))

(executable
 (name gen_dune)
 (libraries pcre liquidsoap_build_tools)
 (modules gen_dune))

(rule
 (alias gendune)
 (target dune.inc.gen)
 (deps
  (source_tree .)
  (source_tree ../libs))
 (action
  (with-stdout-to
   dune.inc.gen
   (run ./gen_dune.exe))))

(rule
 (alias gendune)
 (action
  (diff dune.inc dune.inc.gen)))

(library
 (name liquidsoap_js)
 (public_name liquidsoap-js)
 (optional)
 (modules init_js regexp_js)
 (preprocess
  (pps js_of_ocaml-ppx))
 (libraries liquidsoap_lang))

(install
 (files filesystem.js)
 (section share)
 (package liquidsoap-js))

(executable
 (name interactive_js)
 (modes js)
 (modules interactive_js)
 (js_of_ocaml
  (javascript_files filesystem.js))
 (preprocess
  (pps ppx_string js_of_ocaml-ppx))
 (libraries liquidsoap_lang liquidsoap_js))
