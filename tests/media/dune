; Regenerate using dune build @gendune --auto-promote

(include dune.inc)

(executable
 (name gen_dune)
 (modules gen_dune))

(rule
 (alias gendune)
 (deps
  (source_tree .))
 (target dune.inc.gen)
 (action
  (with-stdout-to
   dune.inc.gen
   (run ./gen_dune.exe))))

(rule
 (alias gendune)
 (action
  (diff dune.inc dune.inc.gen)))

(rule
 (alias citest)
 (package liquidsoap)
 (target first-concat.mp4)
 (action
  (run
   ffmpeg
   -f
   lavfi
   -i
   "testsrc=duration=20:size=1280x720:rate=30"
   -vf
   "setpts=N+1235"
   %{target})))

(rule
 (alias citest)
 (package liquidsoap)
 (target second-concat.mp4)
 (action
  (run
   ffmpeg
   -f
   lavfi
   -i
   "testsrc=duration=30:size=1280x720:rate=30"
   -vf
   "setpts=N+756"
   %{target})))

(rule
 (alias citest)
 (package liquidsoap)
 (target third-concat.mp4)
 (action
  (run
   ffmpeg
   -f
   lavfi
   -i
   "testsrc=duration=10:size=1280x720:rate=30"
   -vf
   "setpts=N+245"
   %{target})))

(rule
 (alias citest)
 (package liquidsoap)
 (target background.jpg)
 (action
  (run ffmpeg -f lavfi -i testsrc=size=1280x720 -t 1 -f mjpeg %{target})))

(rule
 (alias citest)
 (package liquidsoap)
 (target logo.png)
 (action
  (run ffmpeg -f lavfi -i testsrc=size=50x50 -t 1 -f mjpeg %{target})))

(rule
 (alias citest)
 (package liquidsoap)
 (deps
  first-concat.mp4
  second-concat.mp4
  third-concat.mp4
  test_ffmpeg_copy_concat.liq
  ../../src/bin/liquidsoap.exe
  (source_tree ../../src/libs)
  (:stdlib ../../src/libs/stdlib.liq)
  (:test_liq ../test.liq)
  (:run_test ../run_test.exe))
 (action
  (run
   %{run_test}
   "FFmpeg copy+concat"
   liquidsoap
   --no-stdlib
   %{stdlib}
   %{test_liq}
   test_ffmpeg_copy_concat.liq)))

(rule
 (alias citest)
 (package liquidsoap)
 (deps
  all_media_files
  test_ffmpeg_complex_filter.liq
  ../../src/bin/liquidsoap.exe
  (source_tree ../../src/libs)
  (:stdlib ../../src/libs/stdlib.liq)
  (:test_liq ../test.liq)
  (:run_test ../run_test.exe))
 (action
  (run
   %{run_test}
   "FFmpeg complex filter"
   liquidsoap
   --no-stdlib
   %{stdlib}
   %{test_liq}
   test_ffmpeg_complex_filter.liq)))

(rule
 (alias citest)
 (package liquidsoap)
 (deps
  all_media_files
  background.jpg
  logo.png
  test_ffmpeg_transparency_filter.liq
  ../../src/bin/liquidsoap.exe
  (source_tree ../../src/libs)
  (:stdlib ../../src/libs/stdlib.liq)
  (:test_liq ../test.liq)
  (:run_test ../run_test.exe))
 (action
  (run
   %{run_test}
   "FFmpeg transparency filter"
   liquidsoap
   --no-stdlib
   %{stdlib}
   %{test_liq}
   test_ffmpeg_transparency_filter.liq)))
