(rule
 (target liquidsoap.config)
 (deps ./src/bin/liquidsoap.exe)
 (alias install)
 (mode
  (promote (until-clean)))
 (action
  (progn
    (echo "\nCongratulation on building liquidsoap! Here are the details of your build and configuration:\n")
    (run ./src/bin/liquidsoap.exe --build-config)
    (with-stdout-to %{target}
      (run ./src/bin/liquidsoap.exe --opam-config)))))

(alias
 (name default)
 (deps
  (alias_rec install)))
