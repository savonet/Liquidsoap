#!/usr/bin/make -f

DESTDIR := debian/tmp/usr

%:
	dh $@

override_dh_autoreconf:
	/bin/true

override_dh_auto_configure:
	/bin/true

override_dh_auto_build:
	/bin/true

override_dh_auto_test:
	/bin/true

override_dh_auto_install:
	dune build @install
	dune install --relocatable --prefix $(DESTDIR)
	mkdir -p $(DESTDIR)/share/liquidsoap-core
	cp -rf `opam config var share`/camomile $(DESTDIR)/share/liquidsoap-core
	dh_install

override_dh_auto_clean:
	/bin/true
