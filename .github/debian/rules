#!/usr/bin/make -f

DESTDIR := debian/tmp

%:
	dh $@

override_dh_autoreconf:
	/bin/true

override_dh_auto_configure:
	/bin/true

override_dh_auto_build:
	/bin/true

override_dh_auto_test:
	/bin/true

override_dh_auto_install:
	export LIQUIDSOAP_BUILD_TARGET=posix
	dune build @install --release
	dune install --relocatable --prefix $(DESTDIR)
	mkdir -p $(DESTDIR)/share/liquidsoap
	cp -rf `opam var share`/camomile $(DESTDIR)/share/liquidsoap
	dh_install
	mkdir -p $(DESTDIR)/var/cache/liquidsoap
	export LIQ_CACHE_SYSTEM_DIR=$(DESTDIR)/var/cache/liquidsoap
	dune exec src/bin/liquidsoap.exe -- --cache-only '()'

override_dh_auto_clean:
	/bin/true
